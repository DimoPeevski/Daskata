@model Daskata.Core.ViewModels.EditUserProfileInfoModel

@{
    ViewData["Title"] = "Профил";
}

<div class="container-fluid">
    <div class="row profile-container-cover">
        <div class="col-md-3">
            <img src="@Model.ProfilePictureUrl" class="profile-pic-edit" alt="Профилна снимка на @Model.FirstName @Model.LastName">
        </div>
        <div class="col-md-9">
            <div class="row profile-container-info">
                <span class="profile-acc-name">@Model.FirstName @Model.LastName</span>
                <span class="profile-acc-username">@@@Model.Username</span>
                <span class="profile-acc-info">@Model.AdditionalInfo</span>
                <div class="row">
                    <div class="col-md-3"><div class="profile-box"><img src="~/lib/school.png" alt="Моето училище"> ОУ "Райна Княгиня"</div></div>
                    <div class="col-md-3"><div class="profile-box"><img src="~/lib/location.png" alt="Моята локация"> Пловдив, България</div></div>
                    <div class="col-md-3"><div class="profile-box"><img src="~/lib/calendar.png" alt="Дата на присъединяване"> Регистриран Март 2024</div></div>
                    <div class="col-md-3"><div class="profile-box"><img src="~/lib/star.png" alt="Роля на профила"> Админ</div></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Daskata</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Daskata.styles.css" asp-append-version="true" />

    <meta name="description" content="Пригответе се за предстоящото ни приложение! Платформа, в която всички учители могат лесно да създават и администрират тестове на своите ученици.">
    <meta property="og:locale" content="bg_BG" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Daskata.eu" />
    <meta property="og:description" content="Пригответе се за предстоящото ни приложение! Платформа, в която всички учители могат лесно да създават и администрират тестове на своите ученици." />
    <meta property="og:url" content="https://daskata.eu/" />
    <meta property="og:site_name" content="Daskata" />
    <meta property="og:image" content="https://daskata.eu/external-uploads/daskata-bg-desktop.jpg" />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="shortcut icon" href="https://daskata.eu/external-uploads/fav.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="https://daskata.eu/external-uploads/fav.png">
</head>
<body>
    <header>
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm header-container border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="header-logo" src="~/lib/logo-header-shadow.png" alt="Daskata">
                    </a>

                    <div class="mobile-menu">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        @await Component.InvokeAsync(nameof(HeaderMenuComponent))
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-container">
            &copy; @DateTime.Now.Year - Daskata
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

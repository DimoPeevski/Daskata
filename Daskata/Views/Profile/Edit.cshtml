@model Daskata.Core.ViewModels.EditUserProfileInfoModel

@{
    ViewData["Title"] = "Редакция на профил";
}

<div class="home-container-column">
    <div class="row">
        <div class="col-md-4 text-md-center mt-4">
            <label for="profilePicture" style="cursor: pointer;">
                <img id="profileImage" src="@Model.ProfilePictureUrl" class="profile-pic-edit" alt="Снимка на профила" />
                <input type="file" id="profilePicture" style="display: none;" accept="image/*" />
            </label>
            <div class="mt-4">
                <a href="#" class="nav-link profile-menu links-profile-menu">Примени парола</a>
                <a href="#" class="nav-link profile-menu links-profile-menu">Моите лични данни</a>
            </div>
        </div>
        <div class="col-md-8">
            <form asp-action="Edit" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-12">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">Име</label>
                            <input asp-for="FirstName" class="form-control profile-edit-input" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Фамилия</label>
                            <input asp-for="LastName" class="form-control profile-edit-input" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Username" class="form-label">Потребителско име</label>
                    <input asp-for="Username" class="form-control profile-edit-input" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control profile-edit-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Телефон</label>
                    <input asp-for="PhoneNumber" class="form-control profile-edit-input" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="School" class="form-label">Учебно заведение (пр. ОУ "Иван Вазов")</label>
                            <input asp-for="School" class="form-control profile-edit-input" />
                            <span asp-validation-for="School" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Location" class="form-label">Местоположение (град, държава)</label>
                            <input asp-for="Location" class="form-control profile-edit-input" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="AdditionalInfo" class="form-label">Допълнителна информация (биография, специализации и др.)</label>
                    <textarea asp-for="AdditionalInfo" class="form-control profile-edit-input" rows="4"></textarea>
                    <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary button-login">Запази</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('profilePicture').addEventListener('change', function () {
            var file = this.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function () {
                    document.getElementById('profileImage').src = reader.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}

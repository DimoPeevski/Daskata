@{
    ViewData["Title"] = "Home";
}

<div class="home-container">
    <div class="left-home-box">
        <img class="home-logo" src="~/lib/welcome-logo-transparent.png" alt="Daskata - Добре дошли" style="max-width: 100%;">
    </div>
    <div class="right-home-box">
        <div class="login-container">
            <form id="loginForm" method="post">
                <input type="text" name="username" placeholder="Потребителско име" required>
                <input type="password" name="password" placeholder="Парола" required>
                <input type="submit" value="Влез">
                <a href="#" class="lost-password">Забравена парола</a>
                <hr />
                <input type="button" value="Регистрация" class="button-register">
            </form>
        </div>
    </div>
</div>

